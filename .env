# .env.example - Template de variáveis de ambiente
# Copie para .env e ajuste os valores conforme necessário

# Configurações gerais
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API SIGEL/ANEEL
SIGEL_BASE_URL=https://sigel.aneel.gov.br/arcgis/rest/services/PORTAL/WFS/MapServer/0/query
SIGEL_TIMEOUT=30
SIGEL_RETRIES=3

# Configurações de dados
DATA_RAW_PATH=./data/raw
DATA_PARQUET_PATH=./data/parquet
DATA_CONSOLIDATED_PATH=./data/consolidated
DATA_OUTPUTS_PATH=./data/outputs

# Configurações de processamento
CHUNK_SIZE=1000
MAX_WORKERS=4
MEMORY_LIMIT_GB=2

# Jupyter
JUPYTER_TOKEN=hometown-analytics
JUPYTER_PORT=8888
JUPYTER_IP=0.0.0.0

# Logging
LOG_PATH=./logs
LOG_ROTATION=100 MB
LOG_RETENTION=7 days

# Configurações geoespaciais
CRS_INPUT=EPSG:4326
CRS_OUTPUT=EPSG:4326
GEOMETRY_PRECISION=6

# Configurações de performance
PARQUET_ENGINE=pyarrow
PARQUET_COMPRESSION=snappy
CSV_ENCODING=utf-8

# Configurações de testes
TEST_DATA_PATH=./tests/fixtures
PYTEST_TIMEOUT=60